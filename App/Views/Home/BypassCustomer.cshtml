@model BypassCustomer

<form class="row g-3 pt-3" id="FormBypassCustomer" asp-action="PostBypassCustomer" method="post">

    <div class="container mt-5">
        <h2>By Pass ลูกค้า</h2>

        <form id="bypassCustomer" action="/Home/PostBypassCustomer" method="post">
            <div class="mb-3 row">
                <label for="IdCard" class="col-sm-2 col-form-label">IdCard</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="IdCard" name="IdCard" placeholder="กรอกเลขบัตรประชาชน">
                </div>
            </div>

            <div class="mb-3 row">
                <label for="Remark" class="col-sm-2 col-form-label">สาเหตุ</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="Remark" name="Remark" placeholder="กรอกสาเหตุ">
                </div>
            </div>

            <div class="mb-3 row">
                <div class="col-sm-6">
                    <button type="button" class="btn btn-warning" id="btnBypassCustomer">ยืนยัน Bypass ลูกค้า</button>
                </div>
            </div>
        </form>

        <div class="loaddong">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>

    </div>
</form>